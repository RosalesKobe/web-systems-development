<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>OJT Student - Profile</title>
    <style>
      body {
          font-family: Arial, sans-serif;
          margin: 0;
        }
      
        .dashboard {
          display: flex;
          flex-wrap: wrap;
          justify-content: space-between;
        }
      
        .user-info,
        .announcement {
          background-color: #e0f7fa;
          padding: 20px;
          border-radius: 10px;
          margin: 10px;
          width: calc(48% - 20px);
          box-sizing: border-box;
        }
      
        .user-info h2,
        .announcement h2 {
          color: #00695c;
          margin-bottom: 10px; /* Adjusted margin */
        }
      
        .input-group {
          background-color: #b2ebf2;
          padding: 10px;
          border-radius: 5px;
          margin-bottom: 15px;
        }
      
        .input-group label {
          display: block;
          margin-bottom: 5px;
        }
      
        .input-group input {
          width: 100%;
          padding: 5px;
          box-sizing: border-box; /* Include padding in the input width */
        }
      
        .work-hours-overview {
          margin-top: 20px; /* Adjusted margin */
        }
      
        .chart-placeholder {
          background-color: #b2ebf2;
          height: 200px;
          border-radius: 5px;
        }
      
        .announcement-content,
        .feedback-content {
          background-color: #b2ebf2;
          padding: 10px;
          border-radius: 5px;
          height: 500px;
          margin-top: 20px;
          overflow: auto; /* Added overflow for text scrolling */
        }
      
        /* Responsive layout adjustments */
        @media (max-width: 768px) {
          .dashboard {
            flex-direction: column;
          }
      
          .user-info,
          .announcement {
            width: 100%;
          }
        }
      
      .left-manager {
        background-color: #333;
        color: #fff;
        width: 200px;
        height: 100vh;
        position: fixed;
        top: 0;
        left: 0;
        padding-top: 20px;
      }
    
      .client-task {
        padding: 0;
        margin: 0;
        list-style-type: none;
      }
    
      .client-task li {
        padding: 10px;
      }
    
      .client-task a {
        text-decoration: none;
        color: #fff;
        display: block;
      }
    
      .client-task a:hover {
        background-color: #555;
      }
    
      .content {
        margin-left: 220px;
        padding: 20px;
      }
      .logout-button {
        background-color: #e0f7fa;
        padding: 10px;
        border-radius: 5px;
        text-decoration: none;
        color: #00695c;
        display: inline-block;
        cursor: pointer;
        transition: background-color 0.3s;
}

       .logout-button:hover {
       background-color: #b2ebf2;
}
      

      
    </style>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  </head>
  <body>
    <div class="left-manager">
      <div class="client-task">
        <li class="work">
          <a href="/intern_profile">Profile</a>
        </li>
        <li class="work">
          <a href="/intern_worktrack">Work Track</a>
        </li>
        <li class="work">
          <button id="logoutButton" class="logout-button">Logout</button>
        </li>
      </div>
    </div>
    <div class="content">
      <div class="dashboard">
        <div class="user-info">
          <h2>User Information</h2>
          <form>
            <div class="input-group">
              <label for="last-name">Last Name:</label>
              <input
                type="text"
                id="last-name"
                value="<%= interndetails.lastName %>"
                readonly
              />
            </div>
            <div class="input-group">
              <label for="first-name">First Name:</label>
              <input
                type="text"
                id="first-name"
                value="<%= interndetails.firstName %>"
                readonly
              />
            </div>
            <div class="input-group">
              <label for="email">Email Address:</label>
              <input
                type="email"
                id="email"
                value="<%= interndetails.email %>"
                readonly
              />
            </div>
            <div class="input-group">
              <label for="classCode">Class Code:</label>
              <input
                type="text"
                id="classCode"
                value="<%= interndetails.classCode %>"
                readonly
              />
            </div>
            <div class="input-group">
              <label for="requirementsStatus">Requirements Status:</label>
              <input
                type="text"
                id="requirementsStatus"
                value="<%= requirementsStatus %>"
                readonly
              />
            </div>
          </form>
          <div class="work-hours-overview">
            <h2>Daily Work Hours Overview</h2>
            <canvas id="workHoursChart" width="400" height="400"></canvas>
          </div>          
        </div>
         
<script>
  const dates = <%- JSON.stringify(timeEntries.map(entry => {
    // Create a Date object from the date string
    const tempDate = new Date(entry.date);
    // Adjust the date by setting the hours to midday to avoid timezone issues
    tempDate.setHours(12);
    // Format the date to a more readable format (e.g., "2023-12-13")
    return tempDate.toISOString().split('T')[0];
  })) %>;
  const hours = <%- JSON.stringify(timeEntries.map(entry => entry.hours_submit)) %>;

        
          // Get the context of the canvas to draw the chart
          const ctx = document.getElementById('workHoursChart').getContext('2d');
        
          // Create the line chart
          const workHoursChart = new Chart(ctx, {
            type: 'line',
            data: {
              labels: dates, // X-axis labels
              datasets: [{
                label: 'Hours Rendered',
                data: hours, // Y-axis data
                fill: false,
                borderColor: 'rgb(75, 192, 192)',
                tension: 0.1
              }]
            },
            options: {
              scales: {
                y: {
                  beginAtZero: true
                }
              }
            }
          });

          document.getElementById('logoutButton').addEventListener('click', function() {
    // Redirect to the login page
    window.location.href = '/';
  });
        </script>
        <div class="announcement">
          <h2>Announcements:</h2>
          <div class="announcement-content">
            <% if (programNames && programNames.length > 0) { %> <%
            programNames.forEach(function(program) { %>
            <div class="program">
              <h3><%= program.program_name %></h3>
              <!-- Displaying more information about each program -->
            </div>
            <% }); %> <% } else { %>
            <p>No program announcements available.</p>
            <% } %>
          </div>
          <h2>Feedback:</h2>
          <div class="feedback-content">
            <% if (feedback && feedback.length > 0) { %> <%
            feedback.forEach(function(item) { %>
            <p><%= item.feedback_text %></p>
            <% }); %> <% } else { %>
            <p>No feedback available.</p>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
