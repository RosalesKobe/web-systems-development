<!DOCTYPE html>
<html lang="en">
<head>
    <title>OJT Student - Work Track</title>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/css/style_client.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div class="left-manager">
        <div class="client-task">
            <li class="work">
                <a href="/intern_profile">Profile</a>
            </li>
            <li class="work">
                <a href="/intern_worktrack">Work Track</a>
            </li>
            <li class="work">
                <a href="/intern_documents">Documents</a>
            </li>
        </div>
    </div>
    <div class="content">
        <h1>Welcome to Your Work Track</h1>

        <br>
        <br>
        <h2>Current Date and Time</h2>
        <p id="currentDateTime"></p> 
        <div class="work-track-container">
            <div class="date-time-section">
                <label>Date:</label>
                <span id="currentDateTime"></span>
                <label>Time In:</label>
                <span><!-- Time in value --></span>
                <label>Time Out:</label>
                <span><!-- Time out value --></span>
                <label>Hours Rendered:</label>
                <span><!-- Hours rendered value --></span>
            </div>
        <h2>Records</h2>
        <table border="1">
            <tr>
              <th>Adviser</th>
              <th>Hours Completed</th>
              <th>Hours Remaining</th>
              <th>Start Date</th>
              <th>End Date</th>
              <th>Progress</th>
            </tr>
            <% data.forEach(record => { %>
                <tr>
                  <td><%= record.adviser_id %></td>
                  <td><%= record.hours_completed %></td>
                  <td><%= record.hours_remaining %></td>
                  <td><%= record.start_date %></td>
                  <td><%= record.end_date %></td>
                  <td><%= record.record_status %></td>
                </tr>
              <% }); %>
            
          </table>


    <script>
        // JavaScript code to display current date and time
        window.onload = function() {
            const dateTimeElement = document.getElementById('currentDateTime');
            const currentDate = new Date();
            const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric', hour: 'numeric', minute: 'numeric', second: 'numeric' };
            const formattedDate = currentDate.toLocaleDateString('en-US', options);
            dateTimeElement.textContent = `Current Date and Time: ${formattedDate}`;
        };
    </script>
 </div>
 <div class="work-track-history">
     <h2>Work Track History</h2>
     <table>
         <tr>
             <th>Date</th>
             <th>Time In</th>
             <th>Time Out</th>
             <th>Hour Rendered</th>
         </tr>
         <!-- Dynamic rows will be inserted here -->
     </table>
 </div>
</div>
</body>
</html>